  <link rel="stylesheet" type="text/css" media="screen" href="/styles/board.css"/>
</head>

<body>
  <div class="container">
    <header class="d-flex align-items-center justify-content-end">
      <a class="mock-a">Welcome, {NAME}</a>
    </header>
  
    <div class="d-flex align-items-center">
      <img src="/images/predator_yogi.png" alt="Choose Your Predator Logo" style="width: 10vw; height: 10vw">
      <h2>Yogi Bear</h2>
    </div>
    
    <section class="d-flex justify-content-between align-items-center board">
      <img class="board-piece" src="/images/board_start.png" alt="Start">
      <img class="board-piece" src="/images/board_step.png" alt="Step 1">
      <img class="board-piece" src="/images/board_step.png" alt="Step 2">
      <img class="board-piece" src="/images/board_step.png" alt="Step 3">
      <img class="board-piece" src="/images/board_step.png" alt="Step 4">
      <img class="board-piece" src="/images/board_step.png" alt="Step 5">
      <img class="board-piece" src="/images/board_step.png" alt="Step 6">
      <img class="board-piece" src="/images/board_step.png" alt="Step 7">
      <img class="board-piece" src="/images/board_step.png" alt="Step 8">
      <img class="board-piece" src="/images/board_step.png" alt="Step 9">
      <img class="board-piece" src="/images/board_cabin.png" alt="End">
    </section>

    <section class="d-flex flex-wrap flex-column players">
      <table>
        <tr>
          <th>Player</th>
          <th>Steps to Safety</th>
          <th>Answered</th>
        </tr>

        <tr>
          <td>
            <div class="player-div">
              <img class="player-img" src="/images/player01.png" alt="Player 1">
              <p class="player-name">{USERNAME}</p>
            </div>
          </td>
          <td><h3>3</h3></td>
          <td> </td>
        </tr>

        <tr>
          <td>
            <div class="player-div">
              <img class="player-img" src="/images/player04.png" alt="Player 2">
              <p class="player-name">{USERNAME}</p>
            </div>
          </td>
          <td><h3>4</h3></td>
          <td> </td>
        </tr>

        <tr>
          <td>
            <div class="player-div">
              <img class="player-img" src="/images/player02.png" alt="Player 3">
              <p class="player-name">{USERNAME}</p>
            </div>
          </td>
          <td><h3>6</h3></td>
          <td> </td>
        </tr>
      </table>

    </section>

    <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Session Code</label>
                <input type="text" class="form-control" id="session-code">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger">Join</button>
          </div>
        </div>
      </div>
    </div>
    
  </div>


  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>